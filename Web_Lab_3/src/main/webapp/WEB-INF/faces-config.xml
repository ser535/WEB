<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
              version="2.3">


    <managed-bean>
        <managed-bean-name>applicationBean</managed-bean-name>
        <managed-bean-class>example.ApplicationBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>pointCheckerBean</managed-bean-name>
        <managed-bean-class>example.PointCheckerBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>resultsControllerBean</managed-bean-name>
        <managed-bean-class>example.ResultsControllerBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>

        <managed-property>
            <property-name>pointCheckerBean</property-name>
            <value>#{pointCheckerBean}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>deleteOnDisconnect</managed-bean-name>
        <managed-bean-class>example.db.DeleteOnDisconnect</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>


    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>main</from-outcome>
            <to-view-id>/main.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/main.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/main.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>


</faces-config>